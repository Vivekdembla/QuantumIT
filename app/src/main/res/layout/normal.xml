<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="20dp"
    android:paddingRight="15dp"
    android:layout_marginLeft="5dp">

    <ImageView
        android:layout_width="145dp"
        android:layout_height="160dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/image_of_item"
        android:background="@drawable/border_round"
        android:paddingBottom="35dp"
        android:paddingHorizontal="6dp"
        android:paddingTop="6dp"
        android:src="@color/black"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/image_of_item"
        app:layout_constraintRight_toRightOf="@id/image_of_item"
        app:layout_constraintBottom_toBottomOf="@id/image_of_item"
        android:layout_marginBottom="8dp"
        android:text="Up to 30% Off"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/discount"/>


</androidx.constraintlayout.widget.ConstraintLayout>