<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="15dp">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="250dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="80dp"
        android:id="@+id/item_image"
        android:src="@color/black"
        android:background="@drawable/border_round"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/sold"
        app:layout_constraintRight_toRightOf="@id/item_image"
        android:text="Citizen Analog Blue Dial Men's Watch BL8140 80L"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/price"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="US $1.42"
        app:layout_constraintBottom_toTopOf="@id/sold"
        app:layout_constraintLeft_toLeftOf="@id/sold"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/price"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/item_image"
        app:layout_constraintLeft_toLeftOf="@id/item_image"
        android:layout_marginLeft="10dp"
        android:text="4256 Sold"
        android:textColor="@color/black"
        android:layout_marginBottom="5dp"
        android:id="@+id/sold"/>

</androidx.constraintlayout.widget.ConstraintLayout>